<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="azhar.testlayoutvisibility.nanosoft.usemyappashomescreenandroid.CarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/car" />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_official_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/input_official_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Official name" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_officer_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <EditText
                        android:id="@+id/input_officer_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Officer's title" />
                </android.support.design.widget.TextInputLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_start_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/input_start_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Start Time" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_end_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/input_end_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="End Time" />


                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_purpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/input_purpose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Purpose of travel (full details)" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_type_carriage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/input_type_carriage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="The type of carriage" />


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_accept_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/input_accept_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Accept date" />


                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_place_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/input_place_details"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Place details" />


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_accept_signature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/input_accept_signature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Accepting signature (with seal) and date" />


                </android.support.design.widget.TextInputLayout>



            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</RelativeLayout>
